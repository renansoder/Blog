<%- include ('../../partials/header.ejs') %>
  <%- include ('../../partials/navbar.ejs') %>

    <body>

      <div class="container">
        <hr>
        <% result.articles.rows.forEach(article=> { %>
          <div class="card">
            <div class="card-header">
              <h3>
                <%= article.title %>
              </h3>
            </div>
            <div class="card-body">
              <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
          </div>
          <br>
          <% }) %>

            <div class="row">
              <div class="col col-12">

                <% if(result.num>= 2) { %>
                  <a href="/articles/page/<%= result.num - 1 %>" style="float:left">
                    <<< Prev</a>
                      <% } else if(result.num < 2) { %>
                        <a href="/" style="float:left">
                          <<< Prev</a>
                            <% } %>


                              <% if(result.next) { %>
                                <a href="/articles/page/<%= result.num + 1 %>" style="float:right">Next >>></a>
                                <% } %>

              </div>
              <hr>
            </div>

      </div>
    </body>

    <%- include ('../../partials/footer.ejs') %>